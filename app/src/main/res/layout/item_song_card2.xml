<?xml version="1.0" encoding="utf-8"?>
<com.example.lenovo.test.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp">

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="个性电台"
        android:textColor="#E3FFFFFF"
        android:maxWidth="200dp"
        android:textSize="32dp"
        android:visibility="visible" />

    <com.example.lenovo.test.widget.SquareFrameLayout
        android:id="@+id/sfl_song_card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_song_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffff00"
        app:decide_side="height">

    </com.example.lenovo.test.widget.SquareFrameLayout>


</com.example.lenovo.test.widget.MyRelativeLayout>